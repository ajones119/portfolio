---
interface Props {
	sectionId: string;
	title?: string;
	description?: string;
}

const { sectionId, title, description } = Astro.props;
---

<div id={`demo-${sectionId}`} class="my-8 p-6 border-2 border-tertiary rounded-lg bg-quaternary/10">
	{title && (
		<h4 class="text-lg font-bold font-playfair-display mb-2 text-tertiary">{title}</h4>
	)}
	{description && (
		<p class="text-sm text-muted mb-4">{description}</p>
	)}
	<div class="demo-container w-full max-w-full overflow-hidden">
		<slot />
	</div>
</div>

<style>
	.demo-container {
		min-height: 200px;
		display: flex;
		align-items: center;
		justify-content: center;
	}
</style>

