---
import backgroundGifSrc from '../../../../assets/images/projects/minesweeper/background.gif';
---

<div 
    id="minesweeper-demo-card" 
    class="group w-full h-auto md:max-h-64 p-6 flex flex-col relative overflow-hidden cursor-pointer min-h-fit"
>
    <a 
        href="https://minesweeper.aramisjones.com" 
        target="_blank" 
        rel="noopener noreferrer" 
        class="absolute inset-0 z-10"
        aria-label="Visit Minesweeper Demo"
    ></a>
    
    <div class="relative z-20 pointer-events-none mb-4">
        <h3 class="text-2xl font-bold font-abril-fatface">Minesweeper Demo</h3>
        <p class="text-xs text-primary mt-1">2024</p>
    </div>
    
    <div class="flex flex-col justify-center relative z-20 pointer-events-none">
        <p class="text-sm text-primary mb-4">
            A classic Minesweeper game implementation. Test your logic and luck as you navigate 
            through a grid of hidden mines.
        </p>
    </div>
    
    <!-- GitHub Button -->
    <a 
        href="https://github.com/ajones119/minesweeper-v1" 
        target="_blank" 
        rel="noopener noreferrer"
        class="github-button absolute bottom-4 right-4 z-30 opacity-0 pointer-events-auto"
    >
        <svg class="w-8 h-8 fill-current text-primary hover:text-secondary transition-colors" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
    </a>
    
    <!-- GIF Container with clipping and filters -->
    <div class="absolute inset-0 md:opacity-0 transition-opacity duration-500 ease-in-out overflow-hidden minesweeper-image-container">
        <img 
            src={backgroundGifSrc.src}
            alt="Minesweeper Demo animation"
            class="size-11/12 minesweeper-gif-image"
            style="max-width: 100%; max-height: 100%;"
        />
    </div>
</div>

<style>
    .minesweeper-image-container {
        mix-blend-mode: multiply;
        pointer-events: none;
        overflow: hidden;
    }
    
    html[data-theme="dark"] .minesweeper-image-container {
        mix-blend-mode: screen;
    }
    
    .minesweeper-gif-image {
        filter: grayscale(30%) brightness(0.9) contrast(1.1) saturate(0.8);
        transition: filter 0.5s ease-in-out;
        max-width: 100%;
        max-height: 100%;
        width: 100%;
        /* height: 100%; */
        /* object-fit: cover; */
    }
    
    .group:hover .minesweeper-gif-image {
        filter: grayscale(0%) brightness(1) contrast(1.2) saturate(1);
    }
    
    html[data-theme="dark"] .minesweeper-gif-image {
        filter: grayscale(20%) brightness(0.7) contrast(1.3) saturate(0.9);
    }
    
    html[data-theme="dark"] .group:hover .minesweeper-gif-image {
        filter: grayscale(0%) brightness(0.9) contrast(1.4) saturate(1.1);
    }
</style>

<script>
    import gsap from 'gsap';
    
    const initMinesweeperCard = () => {
        const card = document.getElementById('minesweeper-demo-card');
        const imageContainer = card?.querySelector('.minesweeper-image-container');
        
        if (!card || !imageContainer) return;
        
        // Check if mobile (touch device or small screen)
        const isMobile = window.matchMedia('(max-width: 768px)').matches || 'ontouchstart' in window;
        
        const githubButton = card?.querySelector('.github-button');
        
        // Initial animation on load
        if (isMobile) {
            // Show on mobile immediately
            const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
            gsap.set(imageContainer, {
                opacity: isDark ? 0.6 : 0.2,
            });
            
            if (githubButton) {
                gsap.set(githubButton, {
                    opacity: 1,
                    scale: 1,
                    y: 0,
                });
            }
        } else {
            // Hide on desktop initially
            gsap.set(imageContainer, {
                opacity: 0,
            });
            
            if (githubButton) {
                gsap.set(githubButton, {
                    opacity: 0,
                    scale: 0.8,
                    y: 10,
                });
            }
        }
        
        // Only add hover effects on desktop
        if (!isMobile) {
            // Animate in on hover with theme-aware opacity
            card.addEventListener('mouseenter', (e) => {
                const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
                gsap.to(imageContainer, {
                    opacity: isDark ? 0.6 : 0.2,
                    duration: 0.5,
                    ease: 'power2.out',
                    overwrite: true,
                });
                
                // Slow reveal for GitHub button
                if (githubButton) {
                    gsap.to(githubButton, {
                        opacity: 1,
                        scale: 1,
                        y: 0,
                        duration: 0.8,
                        delay: 0.3,
                        ease: 'power2.out',
                        overwrite: true,
                    });
                }
            });
            
            card.addEventListener('mouseleave', () => {
                gsap.to(imageContainer, {
                    opacity: 0,
                    duration: 0.3,
                    ease: 'power2.in',
                    overwrite: true,
                });
                
                // Hide GitHub button
                if (githubButton) {
                    gsap.to(githubButton, {
                        opacity: 0,
                        scale: 0.8,
                        y: 10,
                        duration: 0.3,
                        ease: 'power2.in',
                        overwrite: true,
                    });
                }
            });
        }
        
        // Prevent GitHub button from triggering card click
        if (githubButton) {
            githubButton.addEventListener('click', (e) => {
                e.stopPropagation();
            });
        }
    };
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMinesweeperCard);
    } else {
        initMinesweeperCard();
    }
</script>

