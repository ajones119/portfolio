<script>
    import gsap from 'gsap';
    
    const initMinesweeperCard = () => {
        const card = document.getElementById('minesweeper-demo-card');
        if (!card) return;
        
        const githubButton = card.querySelector('.github-button');
        
        // Check if mobile (touch device or small screen)
        const isMobile = window.matchMedia('(max-width: 768px)').matches || 'ontouchstart' in window;
        
        // Initial animation on load
        if (githubButton) {
            if (isMobile) {
                // Show on mobile immediately
                gsap.set(githubButton, {
                    opacity: 1,
                    scale: 1,
                    y: 0,
                });
            } else {
                // Hide on desktop initially
                gsap.set(githubButton, {
                    opacity: 0,
                    scale: 0.8,
                    y: 10,
                });
            }
        }
        
        // Only add hover effects on desktop
        if (!isMobile) {
            // Animate in on hover
            card.addEventListener('mouseenter', () => {
                // Slow reveal for GitHub button
                if (githubButton) {
                    gsap.to(githubButton, {
                        opacity: 1,
                        scale: 1,
                        y: 0,
                        duration: 0.8,
                        delay: 0.3,
                        ease: 'power2.out',
                        overwrite: true,
                    });
                }
            });
            
            card.addEventListener('mouseleave', () => {
                // Hide GitHub button
                if (githubButton) {
                    gsap.to(githubButton, {
                        opacity: 0,
                        scale: 0.8,
                        y: 10,
                        duration: 0.3,
                        ease: 'power2.in',
                        overwrite: true,
                    });
                }
            });
        }
        
        // Prevent GitHub button from triggering card click
        if (githubButton) {
            githubButton.addEventListener('click', (e) => {
                e.stopPropagation();
            });
        }
    };
    
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMinesweeperCard);
    } else {
        initMinesweeperCard();
    }
</script>

