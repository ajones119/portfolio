---
import ThemeToggle from '../ThemeToggle/ThemeToggle.astro';
---
<div class="w-full h-screen absolute top-0 left-0 overflow-hidden pointer-events-none">
    <div id="theme-circle-overlay" class="theme-circle-overlay"></div>
</div>
<div class="w-full px-4 z-50">
    <nav class="w-full mx-auto my-10 max-w-4xl border border-solid border-primary rounded-[48px] py-2 px-3">
        <div class="flex justify-between items-center mx-auto">
            <a href="/" data-astro-prefetch class="text-2xl font-bold size-8 rounded-full bg-primary navbar-logo" style="background-image: url('/favicon.png'); background-size: cover; background-position: center; z-index: 50;"></a>
            <div class="flex items-center gap-4">
                <a href="/" data-astro-prefetch class="text-lg">Home</a>
                <a href="/resume" data-astro-prefetch class="text-lg">Resume</a>
                <a href="/blog" data-astro-prefetch class="text-lg">Blog</a>
            </div>
            <ThemeToggle />
        </div>
    </nav>
</div>
<script>
    import { navbar } from './navbar';
    navbar();
</script>